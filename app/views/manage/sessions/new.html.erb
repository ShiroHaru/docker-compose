<% provide(:title, "Login") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(:session, url: manage_login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control mb-3' %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_manage_password_reset_path %>
      <%= f.password_field :password, class: 'form-control mb-3' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary form-control mb-3" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", manage_signup_path %></p>
  </div>
</div>