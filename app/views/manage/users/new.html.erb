<%= provide(:title, "Sign up") %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for([:manage, @user]) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control mb-3"%>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control mb-3" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control mb-3" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control mb-3" %>

      <%= f.submit "Create my account", class: "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>
