<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), [:manage, micropost.user] %>
  <span class="user"><%= link_to micropost.user.name, [:manage, micropost.user] %></span>
  <span class="content"><%= micropost.content %></span>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", [:manage, micropost], method: :delete, data: {confirm: "You sure?"} %>
    <% end %>
  </span>
</li>
